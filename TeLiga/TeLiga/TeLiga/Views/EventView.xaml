<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeLiga.Views.EventView">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableSection Title="Evento">
                    <TextCell Text="{Binding Title}"/>
                    <TextCell Text="{Binding DateEvent, StringFormat='{0:dd/MM/yyyy hh:mm}'}"/>
                    <TextCell Text="{Binding Description}"/>
                    <TextCell Text="{Binding Place}"/>
                    <TextCell Text="{Binding Adress}"/>
                    <TextCell Text="{Binding City}"/>
                    <SwitchCell Text="Alertar" On="{Binding Alert, Mode=TwoWay}"/>
                </TableSection>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>